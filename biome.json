{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "error",
        "noConsole": "warn",
        "noAsyncPromiseExecutor": "error",
        "noConfusingVoidType": "error",
        "noDoubleEquals": "error",
        "noDuplicateCase": "error",
        "noDuplicateObjectKeys": "error",
        "noEmptyBlockStatements": "error",
        "noFallthroughSwitchClause": "error",
        "noRedeclare": "error",
        "noShadowRestrictedNames": "error",
        "useAwait": "warn",
        "useDefaultSwitchClauseLast": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noConstAssign": "error",
        "noNewSymbol": "error",
        "noUndeclaredVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "useTemplate": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 15
          }
        },
        "noForEach": "off",
        "useLiteralKeys": "off",
        "useOptionalChain": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error",
        "noGlobalEval": "error"
      },
      "performance": {
        "noBarrelFile": "off",
        "noReExportAll": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "none"
    },
    "globals": ["Bun"]
  },
  "files": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "coverage/**",
      "*.min.js"
    ]
  },
  "overrides": [
    {
      "include": ["tests/**/*.ts", "**/*.test.ts", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off",
            "noConsole": "off",
            "noEmptyBlockStatements": "off",
            "useAwait": "off"
          }
        }
      }
    },
    {
      "include": ["src/index.ts", "src/ui.ts", "src/commands/**/*.ts", "src/daemon/**/*.ts", "src/client/index.ts", "src/utils/errors.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
